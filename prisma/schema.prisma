generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            Int      @id @default(autoincrement())
  productName   String
  brand         String
  images        String[] // PostgreSQL array
  barcode       String?  @unique
  description   String?
  itemWeight    Float?
  weightUnit    String?
  ingredients   String[]
  storage       String[]
  itemsPerPack  Int?
  color         String?
  material      String?
  width         Float?
  widthUnit    String?
  height        Float?
  heightUnit   String?
  warranty      Int?

  @@unique([productName, brand])
}